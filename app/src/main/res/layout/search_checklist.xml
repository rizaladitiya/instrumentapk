<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tag Name"
                android:id="@+id/tagname"
                android:layout_column="0"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLC"
                android:id="@+id/plc"
                android:layout_column="5"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:text="ID"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/description"
            android:layout_column="3"
            android:layout_span="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="#DDDDDD"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/txtTanggal"
            android:layout_column="3"
            android:layout_span="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="#DDDDDD"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Label"
                android:textColor="#666161" />

            <TextView
                android:id="@+id/txtLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="Value Tipe"
                android:textColor="#666161" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wrapping"
                android:id="@+id/textView15"
                android:layout_column="0"
                android:textColor="#666161" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Value Signal"
                android:id="@+id/txtWrapping"
                android:layout_column="3"
                android:textColor="#666161" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Regulator"
                android:id="@+id/textView14"
                android:layout_column="0"
                android:textColor="#666161" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Value Address"
                android:id="@+id/txtRegulator"
                android:layout_column="3"
                android:textColor="#666161" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value Keterangan"
                android:id="@+id/txtKeterangan"
                android:textColor="#666161" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>