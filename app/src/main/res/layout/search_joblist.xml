<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tag Name"
                android:id="@+id/tagname"
                android:layout_column="0"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/description"
                android:layout_column="5"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/status"
                android:layout_column="5"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:text="ID"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtUserCreated"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_span="3"
                android:background="#DDDDDD"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="User"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/txtTodo"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Do"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:id="@+id/txtUserDoing"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/txtDoing"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doing"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:id="@+id/txtUserDone"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/txtDone"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_column="3"
                android:layout_span="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="#DDDDDD"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutIsi">

            <TextView
                android:id="@+id/textMasalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Label"
                android:textColor="#666161"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/txtSolusi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="Value Tipe"
                android:textColor="#666161"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>